jupyter_notebook(){
  docker run -it --rm \
  -p 8888:8888 \
  -v ~/Documents/ipynb:/home/jovyan/work \
  jupyter/scipy-notebook
}

murtbuntu(){
  docker run -it --rm \
    murtbuntu
}

winbuntu(){
  docker run -it --rm \
    -v ~/sbox:/home/user/sbox/
    murtbuntu
}
